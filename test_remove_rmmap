# -*- mode: shell-script -*-
test_remove_rmmap() {
    local wait=$1
    local i mp

    i=0
    while [[ $i -lt ${#PLISTS[@]} ]]; do
	set -- ${PLISTS[$i]}
	while [[ $# -gt 0 ]]; do
	    action remove $1
	    shift
	done
	: $((++i))
    done

    new_step set paths offline
    sleep 1

    for mp in ${MPATHS[@]}; do
	multipathd remove map $mp
    done

    new_step -s -u removed maps
    sleep 1

    i=0
    while [[ $i -lt ${#PLISTS[@]} ]]; do
	set -- ${PLISTS[$i]}
	action add $1
	: $((++i))
    done
    new_step -s -u restored 1 path
    sleep 1

    for mp in ${MPATHS[@]}; do
	multipathd add map $mp
    done

    new_step re-added maps with 1 paths
    sleep 1

    i=0
    while [[ $i -lt ${#PLISTS[@]} ]]; do
	set -- ${PLISTS[$i]}
	while [[ $# -gt 1 ]]; do
	    action add $1
	    shift
	done
	action mp-reinstate $1
	: $((++i))
    done

    sleep 1
    new_step -k restored paths
}
