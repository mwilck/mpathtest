# -*- mode: shell-script -*-
test_offline_online() {
    local wait=$1 path

    for path in ${PATHS[@]}; do
	action offline $path
	usleep ${wait:-1000}
    done

    sleep 2 offlined paths
    new_step

    for path in ${PATHS[@]}; do
	action online $path
	usleep ${wait:-1000}
    done

    sleep 2 restored paths
    new_step -k
}
